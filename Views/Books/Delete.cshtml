@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <p>
        <h1>Delete confirmation for @Model.Title</h1>
    </p>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="YearPublished"></label>
        <input asp-for="YearPublished" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" disabled />

        </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="form-group mt-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@Model.Id">Back</a>
        </div>
    }

</form>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}





